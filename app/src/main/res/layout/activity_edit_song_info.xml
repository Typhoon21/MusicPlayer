<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.tayfun.musicplayer.EditSongInfoActivity">

    <ImageButton
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/ic_clear_white_36dp"
        android:background="?selectableItemBackgroundBorderless"
        android:layout_alignBottom="@+id/toolbar_container" />

    <ImageButton
        android:id="@+id/agree_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/cancel_button"
        android:background="?selectableItemBackgroundBorderless"
        app:srcCompat="@drawable/ic_done_white_36dp" />

    <ImageButton
        android:id="@+id/album_art"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/agree_button"
        app:srcCompat="@drawable/ic_library_music_black_48dp"
        android:background="?selectableItemBackgroundBorderless"
        android:tint="@color/colorAccent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textSize="24sp"
        tools:text="   Edit Song Info:" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/artist"
        android:layout_below="@+id/album_art"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Name" />

    <EditText
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Artist"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/textView3" />

</RelativeLayout>
